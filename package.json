{
  "name": "questionnaire-renderer-viewer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@molit/fhir-api": "^1.0.42",
    "@molit/questionnaire-renderer": "^1.0.13",
    "bootstrap-vue": "^2.22.0",
    "core-js": "^3.24.1",
    "vue": "^2.7.8",
    "vue-router": "^3.5.4",
    "vue-toggles": "^1.1.4"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.5.19",
    "@vue/cli-plugin-eslint": "^4.5.19",
    "@vue/cli-plugin-router": "^4.5.19",
    "@vue/cli-service": "^4.5.19",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "sass": "^1.54.4",
    "sass-loader": "^10.3.1",
    "vue-template-compiler": "^2.7.8"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential"
    ],
    "rules": {
      "no-console": "warn",
      "no-debugger": "warn",
      "vue/max-attributes-per-line": "off",
      "max-len": [
        "warn",
        {
          "code": 240
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 240
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "eslintIgnore": [
    "/src/assets/js"
  ]
}
